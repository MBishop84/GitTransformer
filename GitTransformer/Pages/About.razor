@page "/about"
<RadzenStack Orientation="Orientation.Horizontal"
             JustifyContent="JustifyContent.Center"
             AlignItems="AlignItems.Center" 
             Style="height: 80-vh"
             class="rz-w-100">

    <RadzenCard class="rz-w-lg-50 rz-w-sm-100">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
            <RadzenImage Path=""
                         Style="width: 80px; height: 80px; border-radius: 50%"
                         AlternateText="Mitch Bishop" />
            <RadzenStack Gap="0">
                <RadzenText TextStyle="TextStyle.Overline" class="rz-display-flex rz-mt-2 rz-my-0">Employee</RadzenText>
                <RadzenText TextStyle="TextStyle.Body1"><b></b></RadzenText>
                <RadzenText TextStyle="TextStyle.Overline" class="rz-display-flex rz-mt-4 rz-mb-0">City</RadzenText>
                <RadzenText TextStyle="TextStyle.Body1"><b></b></RadzenText>
            </RadzenStack>
        </RadzenStack>
        <hr style="border: none; background-color: rgba(0,0,0,.2); height: 1px; margin: 1rem 0;" />
        <RadzenRow>
            <RadzenColumn Size="8" class="rz-text-truncate">
                <b></b>
            </RadzenColumn>
            <RadzenColumn Size="4" class="rz-text-align-end">
                <RadzenBadge BadgeStyle="BadgeStyle.Secondary"
                             Text=@($"{String.Format(new System.Globalization.CultureInfo("en-US"), "{0:C}", 85000)}") />
            </RadzenColumn>
        </RadzenRow>
    </RadzenCard>

</RadzenStack>
